meta {
  name: create
  type: http
  seq: 1
}

post {
  url: {{base_url}}
  body: json
  auth: inherit
}

headers {
  x-csrf-token: {{csrf_token}}
}

body:json {
  {
    "problemId": null,
    "parentId": null,
    "text": "{{$randomLoremParagraph}}"
  }
}

script:post-response {
  const clarificationId = res.body["id"]
  
  bru.setVar("clarification_id", clarificationId)
}

settings {
  encodeUrl: true
  timeout: 0
}
