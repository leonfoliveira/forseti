meta {
  name: contestant
  type: http
  seq: 3
}

post {
  url: {{base_url}}:sign-in
  body: json
  auth: inherit
}

headers {
  x-csrf-token: {{csrf_token}}
}

body:json {
  {
    "login": "contestant",
    "password": "123"
  }
}

script:post-response {
  const cookies = res.headers["set-cookie"]
  const csrfCookie = cookies[1]
  const match = csrfCookie.match(/csrf_token=(.+?)(;|$)/);
  bru.setVar("csrf_token", match[1])
}

settings {
  encodeUrl: true
  timeout: 0
}
