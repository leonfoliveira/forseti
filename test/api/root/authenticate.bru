meta {
  name: authenticate
  type: http
  seq: 1
}

post {
  url: {{base_url}}/sign-in
  body: json
  auth: inherit
}

body:json {
  {
    "password": "forseti"
  }
}

script:post-response {
  const cookies = res.headers["set-cookie"]
  const csrfCookie = cookies[1]
  const match = csrfCookie.match(/csrf_token=(.+?)(;|$)/);
  bru.setVar("csrf_token", match[1])
}

settings {
  encodeUrl: true
  timeout: 0
}
